package main

import (
	"fmt"
	"strings"
)

func main() {
	var input string
	fmt.Print("Digite uma string: ")
	fmt.Scan(&input)

	vowels := "aeiouAEIOU"
	result := strings.Map(func(r rune) rune {
		if strings.ContainsRune(vowels, r) {
			return '*'
		}
		return r
	}, input)

	fmt.Println("String com vogais substitu√≠das:", result)
}
